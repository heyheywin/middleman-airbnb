<div id="about">
  <div class="about-content">
    <h1>This template was built with <i class="fa fa-heart"></i> by</h1>
    <ul class="list-inline">
      <% data.team.each do |team| %>
        <li>
          <% link_to "https://kitt.lewagon.com/alumni/#{team.gh_username}", target: "_blank" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{team.gh_username}", class: "img-circle" %>
          <% end %>
          <h2><%= team.name %></h2>
          <p>
            <% link_to "https://github.com/#{team.gh_username}", target: "_blank" do %>
              <i class="fa fa-github"></i> <%= team.gh_username %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
